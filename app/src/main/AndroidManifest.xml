<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.there.moviperfood">

    <application
        android:name=".MoviperFoodApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/api_key" />

        <activity android:name=".viper.search.SearchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".viper.restaurants.RestaurantsActivity"
            android:parentActivityName=".viper.search.SearchActivity"/>
        <activity android:name=".viper.reviews.ReviewsActivity"
            android:parentActivityName=".viper.restaurants.RestaurantsActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>
</manifest>
