<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="restaurant"
            type="com.example.there.moviperfood.data.restaurant.Restaurant"/>
    </data>

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/restaurant_name_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{restaurant.name}"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/restaurant_address_txt"/>

        <TextView
            android:id="@+id/restaurant_address_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{restaurant.location.address}"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/restaurant_name_txt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/restaurant_cuisines_label_txt"/>

        <TextView
            android:id="@+id/restaurant_cuisines_label_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/cuisines"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toBottomOf="@id/restaurant_address_txt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/restaurant_cuisines_txt"
            app:layout_constraintBottom_toTopOf="@id/restaurant_rating_bar"/>

        <TextView
            android:id="@+id/restaurant_cuisines_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{restaurant.cuisines}"
            android:maxLines="2"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintTop_toBottomOf="@id/restaurant_address_txt"
            app:layout_constraintLeft_toRightOf="@id/restaurant_cuisines_label_txt"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/restaurant_rating_bar"/>

        <RatingBar
            android:id="@+id/restaurant_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="@{Float.parseFloat(restaurant.userRating.aggregateRating)}"
            app:layout_constraintTop_toBottomOf="@id/restaurant_cuisines_label_txt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:stepSize="0.1"
            android:isIndicator="true"
            style="?android:attr/ratingBarStyleSmall"/>

    </android.support.constraint.ConstraintLayout>
</layout>
